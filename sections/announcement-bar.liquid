{{ 'component-slideshow.css' | asset_url | stylesheet_tag }}
{{ 'component-slider.css' | asset_url | stylesheet_tag }}

{%- liquid
  assign social_icons = true
  if settings.social_facebook_link == blank
    assign social_icons = false
  endif
-%}

<div class="utility-bar color-{{ section.settings.color_scheme }} gradient">
  <div class="utility-bar__grid">

    {%- if section.settings.show_social and social_icons -%}
      {%- render 'social-icons' -%}
    {%- endif -%}

    {%- if section.settings.enable_marquee -%}
      <!-- ================= CONTINUOUS MARQUEE ================= -->
      <div class="announcement-bar marquee-wrapper">
        <div class="marquee-track">
          {% for i in (1..10) %}
            {% for block in section.blocks %}
              {% if block.settings.text != blank %}
                <span class="marquee-item" {{ block.shopify_attributes }}>
                  {% if block.settings.link != blank %}
                    <a href="{{ block.settings.link }}">
                  {% endif %}

                  {{ block.settings.text | escape }}

                  {% if block.settings.link != blank %}
                    </a>
                  {% endif %}
                </span>
                 <span class="marquee-dot">â€¢</span>
              {% endif %}
            {% endfor %}
          {% endfor %}
        </div>
      </div>

    {%- elsif section.blocks.size == 1 -%}
      <!-- ================= SINGLE ANNOUNCEMENT ================= -->
      <div class="announcement-bar">
        <p class="announcement-bar__message h5">
          {{ section.blocks.first.settings.text }}
        </p>
      </div>

    {%- elsif section.blocks.size > 1 -%}
      <!-- ================= SLIDER MODE ================= -->
      <slideshow-component class="announcement-bar">
        <div class="announcement-bar-slider slider-buttons">

          <button class="slider-button slider-button--prev" name="previous">
            <span class="svg-wrapper">
              {{ 'icon-caret.svg' | inline_asset_content }}
            </span>
          </button>

          <div
            class="grid grid--1-col slider slider--everywhere"
            data-autoplay="{{ section.settings.auto_rotate }}"
            data-speed="{{ section.settings.change_slides_speed }}"
          >
            {% for block in section.blocks %}
              <div class="slideshow__slide slider__slide" {{ block.shopify_attributes }}>
                <p class="announcement-bar__message h5">
                  {% if block.settings.link != blank %}
                    <a href="{{ block.settings.link }}">
                  {% endif %}

                  {{ block.settings.text }}

                  {% if block.settings.link != blank %}
                    </a>
                  {% endif %}
                </p>
              </div>
            {% endfor %}
          </div>

          <button class="slider-button slider-button--next" name="next">
            <span class="svg-wrapper">
              {{ 'icon-caret.svg' | inline_asset_content }}
            </span>
          </button>

        </div>
      </slideshow-component>
    {%- endif -%}

  </div>
</div>

<!-- ================= MARQUEE CSS ================= -->
<style>
  .marquee-wrapper {
    overflow: hidden;
    white-space: nowrap;
  }
.marquee-dot {
    font-size: 14px;
    padding: 0 20px;
    opacity: 1;
  }
  .marquee-track {
    display: inline-flex;
    align-items: center;
    width: max-content;
    animation: marqueeScroll 80s linear infinite;
  }

  .marquee-item {
    padding: 0 48px;
    font-size: 14px;
    font-weight: 500;
  }

  .marquee-item a {
    text-decoration: none;
    color: inherit;
  }

  @keyframes marqueeScroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }
</style>

{% schema %}
{
  "name": "Announcement bar",
  "enabled_on": {
    "groups": ["header"]
  },
  "settings": [
    {
      "type": "checkbox",
      "id": "enable_marquee",
      "label": "Enable continuous marquee",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "auto_rotate",
      "label": "Auto rotate slider",
      "default": false
    },
    {
      "type": "range",
      "id": "change_slides_speed",
      "min": 3,
      "max": 10,
      "step": 1,
      "unit": "s",
      "label": "Slider speed",
      "default": 5
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-4"
    },
    {
      "type": "checkbox",
      "id": "show_social",
      "label": "Show social icons",
      "default": false
    }
  ],
  "blocks": [
    {
      "type": "announcement",
      "name": "Announcement",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "Free shipping on all orders"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Announcement bar",
      "blocks": [
        {
          "type": "announcement"
        }
      ]
    }
  ]
}
{% endschema %}
